@{
    ViewBag.Title = "Chọn ngày thuê";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Quản Lý</a>
    </li>
    <li class="breadcrumb-item active">Chọn ngày thuê</li>
</ol>
<div class="container">
    <br /><br /><br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Chọn ngày thuê</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("SelectInfrastructure", "PhieuDatSan"))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-3">
                        <label for="date_start">Ngày thuê</label>
                        @Html.TextBox("NgayThue", DateTime.Now.ToShortDateString(), new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-md-3">
                        <label for="date_end">số giờ thuê</label>
                        @Html.TextBox("soGioThue", null, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label for="date_end" style="visibility:hidden">End Date</label>
                        <input type="submit" class="btn btn-primary btn-block" onclick="return checkday()" value="Tìm sân">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function checkday() {
        var from = $("#NgayThue").val().split("/");
        var soGioThue = $("#soGioThue").val();

        var dateS = new Date(from[2], from[1] - 1, from[0]);

        var now = new Date();
        now.setHours(0);
        now.setSeconds(0);
        now.setMinutes(0);
        now.setMilliseconds(0);

        if (dateS < now) {
            alert("Ngày thuê lớn hơn hoặc bằng ngày hiện tại !");
            return false;
        }
        if (soGioThue <= 0) {
            alert("Số giờ thuê phải lớn hơn 0 !");
            return false;
        }
        if (from == "" || soGioThue == "") {
            alert("Ngày tháng và số giờ thuê không được để trống !");
            return false;
        }
        return true;
    }
</script>
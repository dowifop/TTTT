@model QLTT.Models.PhieuThueSan

@{
    ViewBag.Title = "Gia Hạn Sân";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ListPhongDangHoatDong","Admin")">Sân đang hoạt động</a>
    </li>
    <li class="breadcrumb-item active">Gia hạn sân @Model.San.maSoSan</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Gia Hạn Phòng @Model.San.maSoSan
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ResultGiaHan", "HoaDon"))
        {
            if (ViewBag.dateMax != null)
            {
                <div class="alert alert-warning"><b> Ngày trả phòng không được quá @ViewBag.dateMax </b></div>
            }
            <div class="alert alert-info"><b> Sân @Model.San.maSoSan đang được dự kiến trả phòng vào ngày @Model.soGioThue </b></div>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.maPT)

            <div class="row">
                <div class="col-md-3">
                    <label for="date_start">Ngày thuê</label>
                    @Html.TextBoxFor(m => m.NgayThue, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-3">
                    <label for="date_end">Số giờ thuê</label>
                    @Html.TextBoxFor(m => m.soGioThue, new { @type = "date", @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label for="date_end" style="visibility:hidden">End Date</label>
                    <input type="submit" class="btn btn-primary btn-block" onclick="return checkday()" value="Gia hạn">
                </div>
            </div>
        }
    </div>
</div>

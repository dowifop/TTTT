     function checkday() {
        var from = $("#NgayThue").val().split("/");
        var soGioThue = $("#soGioThue").val();

        var dateS = new Date(from[2], from[1] - 1, from[0]);
    var dateMax = new int(@ViewBag.dateMax);
        var now = new Date();
        now.setHours(0);
        now.setSeconds(0);
        now.setMinutes(0);
        now.setMilliseconds(0);

        if (dateS < now) {
            alert("Ngày thuê lớn hơn hoặc bằng ngày hiện tại !");
            return false;
        }
        if (soGioThue <= 0) {
            alert("Số giờ thuê phải lớn hơn 0 !");
            return false;
         }
         if (soGioThue) > dateMax) {
            alert("Ngày ra không được quá ngày @ViewBag.dateMax");
            return false;
            }
        if (from == "" || soGioThue == "") {
            alert("Ngày tháng và số giờ thuê không được để trống !");
            return false;
        }
        return true;
    }
</script>

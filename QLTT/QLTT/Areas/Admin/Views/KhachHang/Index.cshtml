﻿@model IEnumerable<QLTT.Models.KhachHang>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Content/Admin/js/table2excel.js">

</script>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Danh sách khách hàng</li>
</ol>
<p>
    @Html.ActionLink("Thêm Khách hàng", "Add")
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách khách hàng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered" id="example-table">
                <tr>
                    <th>
                        @Html.DisplayName("Username")
                    </th>
                    <th>
                        @Html.DisplayName("Họ tên")
                    </th>
                    <th>
                        @Html.DisplayName("Địa chỉ")
                    </th>
                    <th>
                        @Html.DisplayName("Số ĐT")
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.maKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.hoTenKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.diaChiKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sdtKH)
                        </td>

                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.maKH }) |
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.maKH }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.maKH })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <button id="downloadexecl"> Tải Xuống Excel</button>
        <br><br>

    </div>
    <script>
        document.getElementById('downloadexecl').addEventListener('click', function () {
            var table2excel = new Table2Excel();
            table2excel.export(document.querySelectorAll("#example-table"));

        });
    </script>
</div>
</div>
@model IEnumerable<QLTT.Models.PhieuThueSan>

@{
    ViewBag.Title = "Danh sách phiếu thuê sân trong hôm nay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Quản Lý</a>
    </li>
    <li class="breadcrumb-item active">Phiếu thuê sân</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sánh Phiếu thuê sân ngày @DateTime.Now.Day / @DateTime.Now.Month / @DateTime.Now.Year

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Mã KH")
                        </th>
                        <th>
                            @Html.DisplayName("Tên KH")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày đặt")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày thuê")
                        </th>
                        <th>
                            @Html.DisplayName("Số giờ thuê")
                        </th>
                        <th>
                            @Html.DisplayName("Mã số sân")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.maKH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KhachHang.hoTenKH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayDat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayThue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.soGioThue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.San.maSoSan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tinhTrangPT.tinhTrang)
                            </td>
                            <td>
                              
                                <a class="nav-link" href="@Url.Action("Add", "Bill", new { id = item.maPT })">Nhận Sân</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @DateTime.Now</div>
</div>

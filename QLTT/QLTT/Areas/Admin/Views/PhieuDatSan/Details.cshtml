@model QLTT.Models.PhieuThueSan
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Quản Lý</a>
    </li>
    <li class="breadcrumb-item active">Thông tin phiếu thuê cơ sở vật chất</li>
</ol>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên khách hàng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KhachHang.hoTenKH)
        </dd>

        <dt>
            @Html.DisplayName("Ngày đặt")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayDat)
        </dd>

        <dt>
            @Html.DisplayName("Ngày thuê")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayThue)
        </dd>


        <dt>
            @Html.DisplayName("Số giờ thuê")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soGioThue)
        </dd>


        <dt>
            @Html.DisplayName("Mã số sân")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.San.maSoSan)
        </dd>

        <dt>
            @Html.DisplayName("Tình trạng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tinhTrangPT.tinhTrang)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.maPT }) |

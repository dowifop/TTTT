@model QLTT.Models.San
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Quản Lý</a>
    </li>
    <li class="breadcrumb-item active">Danh sách sân</li>
</ol>

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Bạn có chắc chắn muốn xóa?
    </div>
    <div class="card-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Mã số sân")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.maSoSan)
                </dd>

                <dt>
                    @Html.DisplayName("Loại sân")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiSan.moTa)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-default" /> |
                    @Html.ActionLink("Quay Lại", "Index")
                </div>
            }
        </div>
    </div>
</div>

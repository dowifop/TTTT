@model IEnumerable<QLTT.Models.LoaiSan>

@{
    ViewBag.Title = "Giá Sân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .thumb {
        width: 400px;
        height: 300px;
        background-color: transparent;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }

    .card {
        margin-bottom: 30px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        margin-bottom: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .card-text {
        font-size: 23px;
    }
</style>

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<br />
<br />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i style='font-size: 50px; color: #47a8d88f ' class='fas'>&#xf6c3;</i> Bảng giá cơ sở vật chất</h3>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="thumb" style="background-image:url(@Html.DisplayFor(modelItem => item.anh));"></div>
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.moTa)</h5>
                            <p class="card-text">Giá/1giờ: @Html.DisplayFor(modelItem => item.giaThue) VND</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="slider"></div>

<script>
    function clickImg(id) {
        $.ajax({
            url: "/Home/Slider/" + id,
            type: "GET",
            success: function (data) {
                $("#slider").html(data);
            }
        });
    }
</script>


@{
    ViewBag.Title = "Tìm Sân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(/Content/Home/hinh/bgTTTT.png)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">
                <div class="row row-mt-15em">
                </div>
                <div class="col-md-4 col-md-push-1 animate-box" data-animate-effect="fadeInRight">
                    <div class="form-wrap">
                        <div class="tab">
                            <div class="tab-content">
                                <div class="tab-content-inner active" data-content="signup">
                                    <h1 class="cursive-font">Đặt Sân</h1>
                                    @using (Html.BeginForm("Search", "Home"))
                                    {
                                        <div class="row form-group">
                                            <div class="col-md-12">
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-md-12">
                                                <label for="NgayThue">Ngày Thuê</label>
                                                @Html.TextBox("NgayThue", null, new { @class = "form-control", id = "NgayThue" })

                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col-md-12">
                                                <label for="soGioThue">Số Giờ Thuê</label>
                                                @Html.TextBox("soGioThue", null, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col-md-12">
                                                <input type="submit" onclick="return checkday()" class="btn btn-primary btn-block" value="Tìm Kiếm">
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>


<style>
    .average-score {
        font-size: 50px;
        margin-bottom: 10px;
        color: #FBB448;
        font-weight: 100;
        display: block;
    }
</style>

<script>
    function checkday() {
        var from = $("#NgayThue").val().split("/");
        var soGioThue = $("#soGioThue").val();

        var dateS = new Date(from[2], from[1] - 1, from[0]);

        var now = new Date();
        now.setHours(0);
        now.setSeconds(0);
        now.setMinutes(0);
        now.setMilliseconds(0);

        if (dateS < now) {
            alert("Ngày thuê lớn hơn hoặc bằng ngày hiện tại !");
            return false;
        }
        if (soGioThue <= 0) {
            alert("Số giờ thuê phải lớn hơn 0 !");
            return false;
        }
        if (from == "" || soGioThue == "") {
            alert("Ngày tháng và số giờ thuê không được để trống !");
            return false;
        }
        return true;
    }

</script>
<link rel="stylesheet" href="~/Content/Home/css/bootstrap-datetimepicker.min.css">
<script src="~/Content/Home/js/moment.min.js"></script>
<script src="~/Content/Home/js/bootstrap-datetimepicker.min.js"></script>
<script>
    $(function () {
        $('#NgayThue').datetimepicker({
            format: 'DD/MM/YYYY'
        });
    });
</script>

<script>
    $(function () {
        $("#NgayThue").datepicker({
            dateFormat: 'dd/mm/yy'
        });
    });

</script>


@{
    ViewBag.Title = "Đặt Sân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<QLTT.Models.PhieuThueSan>
<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Phiếu thuê sân</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Result", "Home"))
                    {
                        @Html.AntiForgeryToken()
                        if (ViewBag.maSan == null || ((String)ViewBag.maSan).Equals("[]"))
                        {
                            <div class="alert alert-warning" role="alert">Bạn chưa chọn sân để đặt. Vui lòng chọn sân !</div>
                        }
                        else
                        {
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group hidden">
                                    @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBox("maKH", (String)ViewBag.maKH, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("tenKH", (String)ViewBag.hoTenKH, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Ngày đặt", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("NgayDat", (DateTime)ViewBag.NgayDat, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Ngày Thuê", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("ngayThue", (String)ViewBag.ngayThue, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Số giờ thuê", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("soGioThue", (String)ViewBag.soGioThue, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group hidden">
                                    @Html.Label("Mã Sân", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("maSan", (String)ViewBag.maSan, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Số Sân", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("maSoSan", (String)ViewBag.maSoSan, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-9">
                                        <input type="submit" value="Đặt" class="btn btn-success" />
                                        <a href="@Url.Action("HuyPhieudatSan", "Home")"><span class="btn btn-default">Hủy</span></a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <div>
                        @Html.ActionLink("Trang Chủ", "Index")
                    </div>
                </div>
            </div>

        </div> <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sân đã đặt</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Tên KH")
                                </th>
                                <th>
                                    @Html.DisplayName("Ngày đặt")
                                </th>
                                <th>
                                    @Html.DisplayName("Ngày Thuê")
                                </th>
                                <th>
                                    @Html.DisplayName("Số giờ thuê")
                                </th>
                                <th>
                                    @Html.DisplayName("Số  sân")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KhachHang.hoTenKH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayDat)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayThue)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.soGioThue)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.San.maSoSan)
                                    </td>
                                    <td>
                                        <a class="nav-link" href="@Url.Action("XoaPhieuDatSan", "Account", new { id = item.maPT })">Hủy</a>
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



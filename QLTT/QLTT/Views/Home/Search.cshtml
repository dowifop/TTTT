@model IEnumerable<QLTT.Models.San>

@{
    ViewBag.Title = "Tìm Sân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .thumb {
        width: 200px;
        height: 150px;
        background-color: #3e3e3e;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }
</style>
<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i style='font-size:50px' class='fas'>&#xf002;</i> Tìm </h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Search", "Home"))
            {

                <div class="row form-group">
                    <div class="col-md-12">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label for="NgayThue">Ngày thuê</label>
                        @Html.TextBox("NgayThue", null, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        <label for="soGioThue">Số giờ thuê</label>
                        @Html.TextBox("soGioThue", null, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label for="soGioThue" style="visibility:hidden">soGioThue</label>
                        <input type="submit" onclick="return checkday()" class="btn btn-primary btn-block" value="Tìm Sân">
                    </div>
                    <div class="col-md-4">
                        <label for="soGioThue" style="visibility:hidden">OK</label>
                        <a href="@Url.Action("Rent","Home")" onclick="return checkChonSan()" class="btn btn-primary btn-block">Hoàn Tất</a>
                    </div>
                </div>
            }

            <br />
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-center align-middle">
                    <tr>
                        <th width="100px"></th>
                        <th>
                            Số Sân
                        </th>
                        <th>
                            Loại Sân
                        </th>
                        <th>
                            Giá
                        </th>
                        <th width="100px"></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>

                                @if (item.LoaiSan != null && !string.IsNullOrEmpty(item.LoaiSan.anh))
                                {
                                    // Giả sử chuỗi anh là một đường dẫn hợp lệ và không phải là JSON
                                    <img src="@Url.Content(item.LoaiSan.anh)" height="120px" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.maSoSan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiSan.moTa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiSan.giaThue)
                            </td>
                            <td>

                                <button id="btn_@item.maSan" class="btn btn-success" onclick="btnClick(@item.maSan)">Chọn Sân </button>

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
<div id="slider">

</div>
<script>
    function clickImg(id) {
        $.ajax({
            url: "/Home/Slider/"+id,
            type: "GET",
            success: function (data) {
                $("#slider").html(data);
            }
        });
    }
</script>
<script>
    function btnClick(id) {
        var btn = $('#btn_' + id);
        if (btn.html() == "Chọn Sân") {
            $.ajax({
                url: '/Home/ChooseInfrastructure/' + id,
                type: 'GET',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                success: function (data) {
                    if (data.trim() == 'success') {
                    btn.removeClass('btn-success').addClass('btn-default');
                        $('#btn_' + id).html('Huỷ chọn');
                    }
                }
            });
        } else {
            $.ajax({
                url: '/Home/Cancel/' + id,
                type: 'GET',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                success: function (data) {
                    if (data.trim() == 'success') {
                    btn.removeClass('btn-default').addClass('btn-success');
                        $('#btn_' + id).html('Chọn Sân');
                    }
                }
            });
        }
    }
    function checkChonSan() {
        var li = document.getElementsByClassName('btn-default');
        if (li.length == 0) {
            alert('Bạn chưa chọn sân');
            return false;
        }
        return true;
    }
</script>
<script>
    function checkday() {
        var from = $("#NgayThue").val().split("/");
        var soGioThue = $("#soGioThue").val();

        var dateS = new Date(from[2], from[1] - 1, from[0]);

        var now = new Date();
        now.setHours(0);
        now.setSeconds(0);
        now.setMinutes(0);
        now.setMilliseconds(0);

        if (dateS < now) {
            alert("Ngày thuê lớn hơn hoặc bằng ngày hiện tại !");
            return false;
        }
        if (soGioThue <= 0) {
            alert("Số giờ thuê phải lớn hơn 0 !");
            return false;
        }
        if (from == "" || soGioThue == "") {
            alert("Ngày tháng và số giờ thuê không được để trống !");
            return false;
        }
        return true;
    }
</script>

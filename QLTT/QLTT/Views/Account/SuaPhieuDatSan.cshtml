@model QLTT.Models.PhieuThueSan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.maPT)
            @Html.HiddenFor(model => model.maKH)
            <div class="form-group">
                @Html.Label("Tên khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KhachHang.hoTenKH, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ngày đặt", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ngày Thuê", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NgayThue, new { @type = "date", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NgayThue, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Số Giờ Thuê", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.soGioThue, new { @type = "date", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.soGioThue, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Số Sân", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("maSoSan", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maSoSan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" onclick="return checkday()" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

<script src="~/Content/Home/js/main.js"></script>
<script>
    function checkday() {
        var from = $("#NgayThue").val().split("/");
        var soGioThue = $("#soGioThue").val();

        var dateS = new Date(from[2], from[1] - 1, from[0]);

        var now = new Date();
        now.setHours(0);
        now.setSeconds(0);
        now.setMinutes(0);
        now.setMilliseconds(0);

        if (dateS < now) {
            alert("Ngày thuê lớn hơn hoặc bằng ngày hiện tại !");
            return false;
        }
        if (soGioThue <= 0) {
            alert("Số giờ thuê phải lớn hơn 0 !");
            return false;
        }
        if (from == "" || soGioThue == "") {
            alert("Ngày tháng và số giờ thuê không được để trống !");
            return false;
        }
        return true;
    }
</script>